<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>onlineBoutique.entity.ModeLivraison</class>
    <class>onlineBoutique.entity.Commande</class>
    <class>onlineBoutique.entity.Utilisateur</class>
    <class>onlineBoutique.entity.Article</class>
    <class>onlineBoutique.entity.CodePromo</class>
    <class>onlineBoutique.entity.SousComande</class>
    <class>onlineBoutique.entity.Categorie</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/online_boutique"/>
      <property name="javax.persistence.jdbc.user" value="online_boutique"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="online_boutique"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
